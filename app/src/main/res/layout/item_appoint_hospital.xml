<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_love"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/selector_iv_love"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/item_hospital_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:background="@drawable/hospital_null" />

    <TextView
        android:id="@+id/item_hospital_name"
        style="@style/textview16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_hospital_view"
        android:layout_toRightOf="@+id/item_hospital_view"
        android:text="南京市鼓楼医院" />

    <TextView
        android:id="@+id/item_hospital_grade"
        style="@style/textview14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/item_hospital_name"
        android:layout_toEndOf="@+id/item_hospital_view"
        android:text="三级甲等"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/item_hospital_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_hospital_grade"
        android:layout_toEndOf="@+id/item_hospital_view"
        android:text="南京市江宁区弘景大道1号"
        android:textColor="?android:attr/textColorHint" />

    <TextView
        android:id="@+id/item_hospital_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_hospital_grade"
        android:layout_centerHorizontal="true"
        android:text="4.5" />


</RelativeLayout>