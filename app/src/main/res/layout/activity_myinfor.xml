<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    >

   <include layout="@layout/layout_titie"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/list_divider_color"></View>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_white"
        android:layout_marginTop="30dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/infor_layout_img"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="头像"
                android:textColor="@color/text_gray" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/infor_img"
                android:layout_width="75dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/doctor_null" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/list_divider_color"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="帐户"
                android:textColor="@color/text_gray" />

            <TextView
                android:id="@+id/infor_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="15055735530"
                android:textColor="@color/text_gray" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/list_divider_color"></View>

        <RelativeLayout
            android:id="@+id/infor_layout_name"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/text_gray"
                android:text="昵称"

                />

            <TextView
                android:id="@+id/infor_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="会飞的猪"
                android:textColor="@color/text_gray"
                android:textSize="14sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/list_divider_color"></View>

        <RelativeLayout
            android:id="@+id/infor_layout_real_name"
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/text_gray"
                android:text="真实姓名"
                />

            <TextView
                android:id="@+id/infor_real_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="李帆"
                android:textColor="@color/text_gray"
                android:textSize="14sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"

            android:background="@color/list_divider_color"></View>

        <RelativeLayout
            android:id="@+id/infor_layout_sex"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/text_gray"
                android:text="性别" />

            <TextView
                android:id="@+id/infor_sex"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:textColor="@color/text_gray"
                android:text="男"
                android:textSize="14sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"

            android:background="@color/list_divider_color"></View>

        <RelativeLayout
            android:id="@+id/infor_layout_age"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/text_gray"
                android:text="年龄" />

            <TextView
                android:id="@+id/infor_age"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/text_gray"
                android:gravity="center"
                android:text="1"
                android:textSize="14sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/list_divider_color"></View>

        <RelativeLayout
            android:id="@+id/infor_layout_tel"
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:layout_centerVertical="true"
                android:text="电话"

                />

            <TextView
                android:id="@+id/infor_tel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:textColor="@color/text_gray"
                android:text="15055735530"
                android:textSize="14sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"

            android:background="@color/list_divider_color"></View>

        <RelativeLayout
            android:id="@+id/infor_layout_email"
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/text_gray"
                android:text="邮箱"

                />

            <TextView
                android:id="@+id/infor_email"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="2224779926@qq.com"
                android:textColor="@color/text_gray"
                android:textSize="14sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/btn_infor_commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/btn_radius"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </LinearLayout>


    </ScrollView>




</LinearLayout>