<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/forecast_theme">
    <include layout="@layout/layout_titie"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@drawable/layout_radius">

        <TextView
            android:id="@+id/forecast_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_forecast_result"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="70dp"
            android:text="李帆，您的预测结果如下！" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/tv_forecast_result"
            android:text="您的患癌风险为"/>

        <TextView
            android:id="@+id/tv_forecast_result"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerInParent="true"
            android:layout_margin="30dp"
            android:background="@drawable/forecast_result_tv"
            android:gravity="center"
            android:text="3.32%"
            android:textColor="@color/white"
            android:textSize="36sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_below="@id/tv_forecast_result"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 我去医院 "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 祝您身体健康,长命百岁！"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="*数据仅供参考"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="云计算"/>

    </RelativeLayout>





</LinearLayout>