<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="main.MainActivity">

    <include layout="@layout/layout_search"></include>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                ptr:title_height="35dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/layout_radius_10dip"
                >

                <ImageView

                    android:id="@+id/appointimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:layout_weight="3"
                    android:background="@drawable/yuyueguohao" />

                <ImageView
                    android:id="@+id/iv_forecast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/forecast" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:background="@drawable/layout_10radius_white">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:text="选科室  问医生"
                    android:textSize="18sp"
                    android:textStyle="bold" />



                <GridView
                    android:id="@+id/gv_home"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/white"
                    android:cacheColorHint="#00000000"
                    android:gravity="center"
                    android:horizontalSpacing="10dp"
                    android:numColumns="4"
                    android:verticalSpacing="10dp"
                    android:visibility="visible">


                </GridView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/radius_stoke_30"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="都在问"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:text="更多"
                    android:textColor="@color/color_orange"
                    android:textSize="14sp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/list_divider_color"
                android:layout_height="1px">
            </View>

            <ListView
                android:id="@+id/home_ask_list"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:scrollbars="none"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:layout_height="370dp">

            </ListView>
            </LinearLayout>


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_white"
                android:padding="10dp"
                android:text="资讯"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
            <View
                android:layout_width="match_parent"
                android:background="@color/list_divider_color"
                android:layout_height="1px">
            </View>


            <com.handmark.pulltorefresh.library.PullToRefreshListView
                android:id="@+id/home_news_list"
                android:layout_width="match_parent"
                android:layout_height="720dp"
                android:cacheColorHint="#00000000"
                android:divider="@color/list_divider_color"
                android:dividerHeight="1px"
                android:fadingEdge="none"
                android:fastScrollEnabled="false"
                android:footerDividersEnabled="false"
                android:headerDividersEnabled="false"
                android:scrollbars="none"
                android:smoothScrollbar="true"
                ptr:ptrMode="pullFromEnd" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>
